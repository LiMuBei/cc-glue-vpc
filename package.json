{
    "name": "@glue-vpc-article/root",
    "version": "1.0.0",
    "license": "MPL-2.0",
    "private": true,
    "workspaces": [
        "infra",
        "lambda"
    ],
    "scripts": {
        "clean": "yarn workspaces foreach --include '@glue-vpc-article/{infra,lambda}' run clean && rm -rf node_modules",
        "prettier:check": "prettier --config .prettierrc --check \"**/*.{ts,js,json,md}\"",
        "prettier": "prettier --config .prettierrc --write \"**/*.{ts,js,json,md}\"",
        "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
        "build": "yarn workspaces foreach --include '@glue-vpc-article/{lambda,}' --verbose run build",
        "move": "yarn workspaces foreach --include '@glue-vpc-article/{lambda,}' --verbose run move",
        "deploy": "yarn workspaces foreach --include '@glue-vpc-article/{infra,}' --verbose run deploy",
        "diff": "yarn workspaces foreach --include '@glue-vpc-article/{infra,}' --verbose run diff"
    },
    "devDependencies": {
        "@types/jest": "^29.5.3",
        "@types/node": "^20.4.7",
        "@typescript-eslint/eslint-plugin": "^6.2.1",
        "@typescript-eslint/parser": "^6.2.1",
        "eslint": "^8.46.0",
        "eslint-config-prettier": "^8.10.0",
        "eslint-plugin-import": "^2.28.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.6.2",
        "prettier": "^3.0.1",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    },
    "packageManager": "yarn@3.6.1"
}
